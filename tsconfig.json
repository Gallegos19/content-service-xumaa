{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@application/*": ["./src/application/*", "./dist/src/application/*"],
      "@domain/*": ["./src/domain/*", "./dist/src/domain/*"],
      "@infrastructure/*": ["./src/infrastructure/*", "./dist/src/infrastructure/*"],
      "@shared/*": ["./src/shared/*", "./dist/src/shared/*"]
    },
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["node"],
    "lib": ["es2020", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
